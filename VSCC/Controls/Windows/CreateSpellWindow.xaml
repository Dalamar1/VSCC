<Window x:Class="VSCC.Controls.Windows.CreateSpellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VSCC.Controls.Windows"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="CreateSpellWindow" Height="520" Width="386">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="5" HorizontalAlignment="Left" VerticalAlignment="Top" Height="128" Width="128" Margin="10,10,0,0">
            <Image x:Name="Img_Picture" Source="{Binding PictureProperty}" Stretch="Fill" />
        </Border>
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="32" Margin="106,106,0,0" Click="Button_Click_2">
            <Image Source="/VSCC;component/Images/AppIcons/icons8-edit-64.png" />
        </Button>
        <TextBox x:Name="TextBox_Name" Text="{Binding Name}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="143,10,0,0" Width="226" Height="28" />
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="225" Margin="143,43,0,0" BorderThickness="1" BorderBrush="PowderBlue" CornerRadius="6">
            <Grid>
                <CheckBox x:Name="CheckBox_Verbal" IsChecked="{Binding PropertyVerbal}" Content="Verbal" />
                <CheckBox x:Name="CheckBox_Somatic" IsChecked="{Binding PropertySomatic}" Content="Somatic" Margin="73,0,-73,0" />
                <CheckBox x:Name="CheckBox_Material" IsChecked="{Binding PropertyMaterial}" Content="Material" Margin="156,0,-156,0" />
                <CheckBox x:Name="CheckBox_Concentration" IsChecked="{Binding PropertyConcentration}" Content="Concentration" Margin="58,14,-58,-18" />
            </Grid>
        </Border>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="106" Margin="143,75,0,0" BorderThickness="1" BorderBrush="PowderBlue" CornerRadius="6">
            <Grid>
                <Label Content="Level" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                <xctk:IntegerUpDown x:Name="IntUD_Level" Value="{Binding Level}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="53,0,0,0" Height="30" Width="47" />
            </Grid>
        </Border>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="106" Margin="262,75,0,0" BorderThickness="1" BorderBrush="PowderBlue" CornerRadius="6">
            <Grid>
                <Label Focusable="False" VerticalAlignment="Top" HorizontalAlignment="Left" Content="Range" Margin="-4,-10,4,10"/>
                <TextBox x:Name="TextBox_Range" Text="{Binding Range}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,10,0,0" Width="96" />
            </Grid>
        </Border>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="106" Margin="143,107,0,0" BorderThickness="1" BorderBrush="PowderBlue" CornerRadius="6">
            <Grid>
                <Label Focusable="False" VerticalAlignment="Top" HorizontalAlignment="Left" Content="Cast Time" Margin="-4,-10,4,10"/>
                <TextBox x:Name="TextBox_CastTime" Text="{Binding CastTime}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,10,0,0" Width="96" />
            </Grid>
        </Border>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Height="32" Width="106" Margin="262,107,0,0" BorderThickness="1" BorderBrush="PowderBlue" CornerRadius="6">
            <Grid>
                <Label Focusable="False" VerticalAlignment="Top" HorizontalAlignment="Left" Content="Duration" Margin="-4,-10,4,10"/>
                <TextBox x:Name="TextBox_Duration" Text="{Binding Duration}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,10,0,0" Width="96" />
            </Grid>
        </Border>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="178" Margin="10,143,0,0" BorderThickness="1" BorderBrush="PowderBlue" CornerRadius="6">
            <Grid>
                <Label Content="School" VerticalContentAlignment="Top" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="-4,-8,0,0" />
                <ComboBox x:Name="ComboBox_School" Text="{Binding School}" IsReadOnly="False" IsEditable="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Height="24" Margin="10,14,0,0" />
            </Grid>
        </Border>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="178" Margin="191,143,0,0" BorderThickness="1" BorderBrush="PowderBlue" CornerRadius="6">
            <Grid>
                <Label Content="Targets" VerticalContentAlignment="Top" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-4,-8,0,0" />
                <ComboBox x:Name="ComboBox_Targets" Text="{Binding Target}" IsReadOnly="False" IsEditable="True" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156" Height="24" Margin="10,14,0,0" />
            </Grid>
        </Border>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Height="93" Width="358" Margin="10,188,0,0" BorderThickness="1" BorderBrush="PowderBlue" CornerRadius="6">
            <Grid>
                <Label Content="Short Description" VerticalContentAlignment="Top" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,-8,0,0" />
                <TextBox x:Name="TextBox_SimpleDesc" Text="{Binding SimpleDescription}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="71" Width="336" AcceptsReturn="True" />
            </Grid>
        </Border>
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" Height="153" Width="358" Margin="10,286,0,0" BorderThickness="1" BorderBrush="PowderBlue" CornerRadius="6">
            <Grid>
                <Label Focusable="False" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Long Description" VerticalContentAlignment="Center" Margin="-2,-11,0,0" />
                <TextBox x:Name="TextBox_Desc" Text="{Binding Description}" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Height="131" Width="336" AcceptsReturn="True" />
            </Grid>
        </Border>
        <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="32" Width="156" Margin="11,0,0,10" Click="Button_Click" />
        <Button Content="OK" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="32" Width="156" Margin="213,0,0,10" Click="Button_Click_1" />
    </Grid>
</Window>
